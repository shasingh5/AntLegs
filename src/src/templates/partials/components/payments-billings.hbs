<div class="container-fluid ant-container">
    <!-- Billing & Payments Header -->
    <div class="row header">
        <div class="col-12 col-md-5 col-lg-6">
            <a href="index.html" class="main-heading">Manage Billing & Payments</a>
        </div>
        <div class="col-12 col-md-7 col-lg-6 text-right">
            <ul class="header-button">
                <li>
                    <!--Dropdown primary-->
                    <div class="dropdown">
                        <!--Trigger-->
                        <button class="btn ant-dropdown ad-big dropdown-toggle waves-effect" type="button"
                            id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">Sort</button>

                        <!--Menu-->
                        <div class="dropdown-menu">
                            <a class="dropdown-item waves-effect" href="#">New</a>
                            <a class="dropdown-item waves-effect" href="#">Cleared</a>
                            <a class="dropdown-item waves-effect" href="#">Pending</a>
                            <a class="dropdown-item waves-effect" href="#">Cancelled</a>
                        </div>
                    </div>
                    <!--/Dropdown primary-->
                </li>
                <li>
                    <button class="btn filter-open waves-effect" data-toggle="modal"
                        data-target="#filterOpen">Filter</button>
                </li>
                <li>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="#" class="btn btn-common active btn-rounded">EMPLOYER</a>
                        <a href="#" class="btn btn-common btn-rounded">RECRUITER</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!--/ Billing & Payments Header -->
    <div class="row row-eq-height">
        <div class="col-12 col-md-8">
            <div class="white-wrapper">
                <div class="row">
                    <div class="col-7 col-sm-6">
                        <h1 class="ant-title bold">Hirings for the period Jan - Dec, 2019</h1>
                    </div>
                    <div class="col-5 col-sm-6">
                        <div class="employer-action text-right">
                            <select name="" id="" class="select" required="required">
                                <option value="">2019</option>
                                <option value="">2018</option>
                                <option value="">2017</option>
                                <option value="">2016</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="graph-block">
                    <img src="assets/images/graph.jpg" alt="Graph">
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="white-wrapper ant-tab">
                <ul class="nav nav-tabs nav-justified md-tabs" id="myTabJust" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab-just" data-toggle="tab" href="#home-just" role="tab"
                            aria-controls="home-just" aria-selected="true">Reward & Points</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab-just" data-toggle="tab" href="#profile-just" role="tab"
                            aria-controls="profile-just" aria-selected="false">Invoices</a>
                    </li>
                </ul>
                <div class="tab-content card pt-4" id="myTabContentJust">
                    <div class="tab-pane fade show active" id="home-just" role="tabpanel"
                        aria-labelledby="home-tab-just">
                        <p class="ant-title">Total Rewards (USD): <b>200000</b></p>
                        <p class="ant-title">Total Points : <b>20000</b></p>
                        <br>
                        <p class="ant-title">Membership Level : <b>Premium</b></p>
                        <br>
                        <div class="rating">
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"> </span>
                            <span class="fas fa-star"> </span>
                            <span class="fas fa-star-half-alt"> </span>
                            <span class="far fa-star"> </span>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile-just" role="tabpanel" aria-labelledby="profile-tab-just">
                        <div class="invoice-tab-pane">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="graph-block">
                                        <img src="assets/images/graph-circle-2.jpg" alt="Graph">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <p class="ant-title nsa">Invoices Received : <b>20</b></p>
                                    <p class="ant-title nsa">New Invoices :<b>2100</b></p>
                                    <ul class="candidate-status">
                                        <li class="hirings">Invoices Cleared : <b>10</b></li>
                                        <li class="shortlisted">Invoices Pending : <b>30</b></li>
                                        <li class="rejections">Invoices Cancelled : <b>20</b></li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-eq-height card-wrapper">
        @@include('./partials/components/payments-billings-card.hbs')
        @@include('./partials/components/payments-billings-card.hbs')
        @@include('./partials/components/payments-billings-card.hbs')
        @@include('./partials/components/payments-billings-card.hbs')
    </div>
</div>

