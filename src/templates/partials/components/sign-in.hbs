<div class="head registration">
	<div class="container">
		<div class="registration-wrapper sign-in">
			<div class="row no-padding">
				<div class="col-12 col-md-5">
					<img class="lazy" src="assets/images/sing-in.jpg" data-src="assets/images/sing-in.jpg"
						alt="sing in" />
				</div>
				<div class="col-12 col-md-7">
					<div class="sign-form">
						<div class="text-left mandatory" title="*mandatory fields">
							<h2 class="heading">Sign-In</h2>
						</div>
						<div class="form-antlegs">
							<form autocomplete="off" class="form" role="form">
								<div class="row">
									<div class="col-12">
										<div class="form-group">
											<label for="inputName">Registered Email ID</label>
											<input class="form-control" id="inputName" type="text">
										</div>
									</div>
									<div class="col-12">
										<div class="form-group">
											<label for="inputName">Password</label>
											<input class="form-control" id="inputName" type="password">
										</div>
									</div>
									<div class="col-6">
										<div class="form-check small">
											<label class="form-check-label">
												<input class="form-check-input" type="checkbox">
												<span>Remember Me</span>
											</label>
										</div>
									</div>
									<div class="col-6 clearfix">
										<a href="#" class="link float-right forgot-Password">Forgot Password?</a>
									</div>
									<div class="col-12">
										<div class="form-group last-group clearfix">
											<button class="btn btn-get float-left" type="submit">Sign-In</button>
										</div>
									</div>
								</div>
							</form>

							<a href="registration.html" class="link float-left">Register</a>
						</div>
					</div>
				</div>
			</div>

			<div class="forgot-block">
				<div class="row">
					<div class="col-12">
						<h5>Forgot Password</h5>

						<div class="clearfix"></div>
						<div class="form-antlegs">
							<form class="" action="/">
								<div class="row">
									<div class="col-12 col-xl-3">
										<div class="form-group">
											<label for="email">Enter Registered Email ID*</label>
										</div>
									</div>
									<div class="col-12 col-xl-4">
										<div class="form-group">
											<input class="form-control" id="inputName" type="text">
										</div>
									</div>
									<div class="col-12 col-sm-8 col-md-5 col-xl-3">
										<button type="submit" class="btn btn-send waves-effect">Send verification
											link</button>
									</div>
									<div class="col-12 col-sm-4 col-md-4 col-xl-2">
										<button type="submit" class="btn btn-cancel">Cancel</button>
									</div>
								</div>								
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>